@model Domain.ViewModel.ItemsViewModel
@{
    var title = (Model.Itms.ItemsId > 0) ? "Update" : "Save";
    title = title + "";
    ViewData["Title"] = title;

    Layout = null;// "~/Views/Shared/_Layout.cshtml";
}
<style>
   /* .fa{
        font-size:18px;
    }*/
</style>
<form asp-area="Master" asp-controller="Items" asp-action="Upsert">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group" hidden>
            <input asp-for="Itms.ItemsId" class="form-control" />
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Itms.Code" class="control-label"></label>
                <input asp-for="Itms.Code" class="form-control form-control-lg" id="ItemCode"/>
                <span asp-validation-for="Itms.Code" class="text-danger"></span>
            </div>
        </div>
        @*<div class="col-md-3">
            <div class="form-group">
                <label asp-for="Itms.Weight" class="control-label"></label><label><b>&nbsp;(Kg)</b></label>
                <input asp-for="Itms.Weight" class="form-control form-control-sm" />
                <span asp-validation-for="Itms.Weight" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label" style="">Purchase Price</label><label style=""><b>&nbsp;(Rs.)</b></label>
                <input asp-for="Itms.PurchasePrice" class="form-control form-control-sm" id="purchasePriceTxt" type="number"/>
                <span asp-validation-for="Itms.PurchasePrice" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label">Sale Price</label><label><b>&nbsp;(Rs.)</b></label>
                <input asp-for="Itms.Price" class="form-control form-control-sm" id="salePriceTxt" type="number" />
                <span asp-validation-for="Itms.Price" class="text-danger"></span>
            </div>
        </div>*@
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Itms.Description" class="control-label"></label>
                <textarea asp-for="Itms.Description" class="form-control form-control-lg" rows="3"></textarea>
                <span asp-validation-for="Itms.Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group float-right">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save" aria-hidden="false"></i> Save</button>
        <button type="submit" class="btn btn-danger"><i class="fa fa-remove" aria-hidden="false"></i> Clear</button>
    </div>
</form>

