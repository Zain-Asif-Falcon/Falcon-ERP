@model IEnumerable<Domain.ViewModel.Reports.AccountCodes>
@{
    Layout = "~/Views/Shared/_ReportingLayout.cshtml";
    ViewBag.Title = "Account Codes";
}
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">

    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <h1 style="background-color:#e4e4e4;padding:10px;text-align:center" class=""> @ViewBag.Title </h1>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">

    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr style="color: #fff; background-color: #0d70b4">
            <th style="width:10%">
               Account Code
            </th>
            <th style="width:40%">
                Account Title
            </th>
            <th style="width:17%"> 
                Account Head
            </th>
            <th style="width:13%">
                Opening Balance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Code
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @*@item.AccountHeadCode -*@ @item.AccountHeadDescription
            </td>
            <td style="text-align:right">
                @item.OpeningBalance
            </td>
        </tr>
        }
    </tbody>
</table>
