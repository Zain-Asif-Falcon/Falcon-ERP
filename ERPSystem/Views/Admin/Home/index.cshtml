@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .card .card-header h5 {
        margin-bottom: 0;
        color: #505050;
        font-size: 15px;
        font-weight: 600;
        /* text-shadow: 0px 0px 1px #000; */
        display: inline-block;
        margin-right: 10px;
        line-height: 1.4;
    }

    .p-b-30-1 {
        padding-bottom: 0px !important;
    }

    .p-t-20-1 {
        padding-top: 0px !important;
        padding-bottom: 0px !important;
    }

    .p-b-30 {
        padding-bottom: 15px !important;
    }

    .p-t-20 {
        padding-top: 15px !important;
    }
</style>




<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Please Select the Final Year</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @*<p>Subscribe to our mailing list to get the latest updates straight in your inbox.</p>*@
                <form>
                    <div class="form-group">
                        <center> <label class="control-label">Final Year  </label></center>
                        @*<span class="symbol required"></span>;*@
                        <select class="form-control text-left form-control-sm accountcodedropdown" asp-items="@ViewBag.Product">
                            <option>Choose Year</option>
                        </select>
                    </div>
                    @*<div class="form-group">
                        <input type="email" class="form-control" placeholder="Email Address">
                    </div>*@
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="draggablePanelList">

    <!-- statustic-card start -->
    <div class="col-xl-4 col-md-6 card-sub" style="text-align:center">
        <div class="card bg-c-yellow text-white">
            <div class="card-block">
                <div class="row align-items-center">
                    <div class="col">
                        <p class="m-b-5">Total Items</p>
                        <h4 class="m-b-0"><span id="accountItemTile">0</span></h4>
                    </div>
                    <div class="col col-auto text-right">
                        <i class="feather icon-user f-50 text-c-yellow"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 card-sub" style="text-align:center">
        <div class="card bg-c-green text-white">
            <div class="card-block">
                <div class="row align-items-center">
                    <div class="col">
                        <p class="m-b-5">Total Account Codes</p>
                        <h4 class="m-b-0"><span id="accountCodeTile">0</span></h4>
                    </div>
                    <div class="col col-auto text-right">
                        <i class="feather icon-credit-card f-50 text-c-green"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 card-sub" style="text-align:center">
        <div class="card bg-c-pink text-white">
            <div class="card-block">
                <div class="row align-items-center">
                    <div class="col">
                        <p class="m-b-5">Total Account Heads</p>
                        <h4 class="m-b-0"><span id="accountHeadTile">0</span></h4>
                    </div>
                    <div class="col col-auto text-right">
                        <i class="feather icon-book f-50 text-c-pink"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- income start -->
    <div class="col-xl-4 col-md-6 card-sub">
        <div class="card">
            <div class="card-header">
                <h5>Total Sales</h5>
                <div class="card-header-right">

                </div>
            </div>
            <div class="card-block">
                <p class="text-c-green f-w-500">
                    <span id="totalSalesTile"></span> Rs.
                    This Month
                </p>
                <div class="row">
                    <div class="col-6 b-r-default lowpaddingdashboard">
                        <p class="text-muted m-b-5">Cash</p>
                        <h5><span id="cashSales"></span> </h5>
                    </div>
                    <div class="col-6 b-r-default lowpaddingdashboard">
                        <p class="text-muted m-b-5">Credit (Recieved)</p>
                        <h5><span id="creditSales"></span></h5>
                    </div>
                </div>
            </div>
            @*<canvas id="tot-lead" height="150"></canvas>*@
        </div>
    </div>
    <div class="col-xl-4 col-md-6 card-sub">
        <div class="card">
            <div class="card-header">
                <h5>Total Purchases</h5>
                <div class="card-header-right">

                </div>
            </div>
            <div class="card-block">
                <p class="text-c-green f-w-500">
                    <span id="totalpurchasestile"></span> Rs.
                    This Month
                </p>
                <div class="row">
                    <div class="col-6 b-r-default lowpaddingdashboard">
                        <p class="text-muted m-b-5">Cash</p>
                        <h5><span id="cashPurchase"></span></h5>
                    </div>
                    <div class="col-6 b-r-default lowpaddingdashboard">
                        <p class="text-muted m-b-5">Credit Purchases</p>
                        <h5><span id="creditPurchase"></span></h5>
                    </div>
                </div>
            </div>
            @*<canvas id="tot-vendor" height="150"></canvas>*@
        </div>
    </div>
    <div class="col-xl-4 col-md-12 card-sub">
        <div class="card">
            <div class="card-header">
                <h5>Payments</h5>
                <div class="card-header-right">

                </div>
            </div>
            <div class="card-block">
                <p class="text-c-green f-w-500">
                    <span id="totalPaymentsTile"></span>
                    this month
                </p>
                <div class="row">
                    <div class="col-6 b-r-default lowpaddingdashboard">
                        <p class="text-muted m-b-5">Recieved</p>
                        <h5><span id="monthlyRecieved"></span></h5>
                    </div>
                    <div class="col-6 b-r-default lowpaddingdashboard">
                        <p class="text-muted m-b-5">Paid</p>
                        <h5><span id="monthlyPaid"></span> </h5>
                    </div>
                </div>
            </div>
            @*<canvas id="invoice-gen" height="150"></canvas>*@
        </div>
    </div>
    <!-- income end -->
    <!-- visitor start -->
    <div class="col-xl-12 col-md-12 card-sub">
        <div class="card">
            <div class="card-header">
                <h5>Last Week Transaction Summary</h5>
                <div class="card-header-right">
                    <ul class="list-unstyled card-option">
                        <li><i class="feather full-card icon-maximize"></i></li>
                        <li>
                            <i class="feather icon-minus minimize-card"></i>
                        </li>
                        @*<li><i class="feather icon-trash-2 close-card"></i></li>*@
                    </ul>
                </div>

            </div>
            <div class="card-block">
                <div id="visitor" style="height:300px"></div>
            </div>
        </div>
    </div>
    <!-- visitor end -->
    @*<div class="col-xl-3 col-md-6 card-sub">
            <div class="card bg-c-blue text-white">
                <div class="card-block">
                    <div class="row align-items-center">
                        <div class="col">
                            <p class="m-b-5">Installations</p>
                            <h4 class="m-b-0">@ViewBag.TodayActivity</h4>
                        </div>
                        <div class="col col-auto text-right">
                            <i class="feather icon-shopping-cart f-50 text-c-blue"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>*@
    <!-- statustic-card start -->
    <!-- latest activity end -->
    <div class="col-xl-6 col-md-12 card-sub">
        <div class="card latest-activity-card">
            <div class="card-header">
                <h5>Latest 5 Sales</h5>
            </div>
            <div class="card-block">
                <div class="latest-update-box" id="salesDashboardList">
                    <img src="~/files/assets/images/no-data-found.png" id="SalesListNotFound" style="display:none; position: absolute; top: 20px; width: 390px; left: 125px; " />

                </div>
                <div class="text-right">
                    <a href="/Transactions/Sales/Index" class=" b-b-primary text-primary">
                        View all
                        Sales
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6 col-md-12 card-sub">
        <div class="card latest-activity-card">
            <div class="card-header">
                <h5>Latest 5 Purchases</h5>
            </div>
            <div class="card-block">
                <div class="latest-update-box" id="PurchasesDashboardList">
                    <img src="~/files/assets/images/no-data-found.png" id="PurchaseListNotFound" style="display:none; position: absolute; top: 20px; width: 390px; left: 125px; " />

                </div>
                <div class="text-right">
                    <a href="/Transactions/Purchases/Index" class=" b-b-primary text-primary">
                        View all
                        Purchases
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- ticket and update start -->
    <div class="col-xl-6 col-md-12 card-sub">
        <div class="card latest-update-card">
            <div class="card-header">
                <h5>Latest 5 Receipts</h5>
                <div class="card-header-right">

                </div>
            </div>
            <div class="card-block">
                <div class="latest-update-box" id="cashRecievedDashboardList">
                    <img src="~/files/assets/images/no-data-found.png" id="RecipetListNotFound" style="display:none; position: absolute; top: 20px; width: 390px; left: 125px; " />
                    @*<img src="~/images/loading.gif" style="
                                position: absolute;
                                top: 90px;
                                width: 100px;
                                left: 45%;
                        " />*@
                </div>
                <div class="" style="text-align:right">
                    <a href="/Transactions/CashRecieved/Index" class="b-b-primary text-primary">
                        View all
                        Receipts
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6 col-md-12 card-sub">
        <div class="card latest-update-card">
            <div class="card-header">
                <h5>Latest 5 Payments</h5>
                <div class="card-header-right">

                </div>
            </div>
            <div class="card-block">
                <div class="latest-update-box" id="cashPaymentsDashboardList">
                    <img src="~/files/assets/images/no-data-found.png" id="PaymentListNotFound" style="display:none; position: absolute; top: 20px; width: 390px; left: 125px; " />

                </div>
                <div class="" style="text-align:right">
                    <a href="/Transactions/CashPayment/Index" class="b-b-primary text-primary">
                        View all
                        Payments
                    </a>
                </div>
            </div>
        </div>
    </div>
   
</div>
